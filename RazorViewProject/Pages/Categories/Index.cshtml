@page
@model RazorViewProject.Pages.Categories.IndexModel



<div class="container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary"> Category List</h2>
        </div>
        <div class="col-6 ">
            <a asp-page="Category" class="btn btn-primary">
                Create New Category
            </a>
        </div>
    </div>


    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Name
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.CategoryList.OrderBy(u => u.DisplayOrder))
            {
                <tr>
                    <td>
                        @obj.Name
                    </td>
                    <td>
                        @obj.DisplayOrder
                    </td>
                    <td>
                        <div class="w-75 btn-group " role="group">
                            <a asp-page="Category/Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bg-info bi-pencil-square"></i>Edit
                            </a>>
                        </div>
                    </td>
                    <td>
                        <div class="w-75 btn-group " role="group">
                            <a asp-page="Category/Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bg-info bi-pencil-square"></i>Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>

</div>

